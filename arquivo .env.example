# Black Mindz Flow Ca$h - Environment Variables Template
# Copy this to .env and fill with your actual values

# IMPORTANTE: NUNCA commite o arquivo .env real!
# Este é apenas um template para outros desenvolvedores

# WALLET CONFIGURATION
# Sua private key (SEM o prefixo 0x)
# EXEMPLO: abc123def456...
PRIVATE_KEY=your_private_key_here

# RPC ENDPOINTS (já configuradas, pode manter assim)
SCROLL_SEPOLIA_RPC=https://sepolia-rpc.scroll.io/
SCROLL_MAINNET_RPC=https://rpc.scroll.io/

# BLOCK EXPLORER API (opcional, para verificação de contratos)
# Obtenha em: https://scrollscan.com/apis
SCROLLSCAN_API_KEY=your_scrollscan_api_key_here

# GAS CONFIGURATION (opcional, valores padrão funcionam bem)
GAS_PRICE=1000000000
GAS_LIMIT=3000000

# TOKEN ADDRESSES (serão preenchidos após deploy)
USDT_TESTNET_ADDRESS=
USDT_MAINNET_ADDRESS=

# CONTRACT ADDRESSES (serão preenchidos após deploy)
BLACK_MINDZ_TESTNET_ADDRESS=
BLACK_MINDZ_MAINNET_ADDRESS=

# MONITORING (opcional)
ALCHEMY_API_KEY=your_alchemy_key_here
INFURA_PROJECT_ID=your_infura_project_id_here

# DEVELOPMENT
NODE_ENV=development
DEBUG=false
